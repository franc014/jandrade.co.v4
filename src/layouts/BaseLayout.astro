---
import "../styles/global.css";
import { useSanityClient } from "astro-sanity";
import Header from "../components/Header.astro";

const confQuery = `
*[_type=='siteConfiguration'][0]
  			{
  				'mainNav':nav_items[]->,
				'siteOwner':site_name
 			}
`;

const { mainNav } = await useSanityClient().fetch(confQuery);

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-accent gradient w-full h-3"></div>
    <Header nav={mainNav} />
    <slot />
    <footer class="flex items-center justify-center bg-accent gradient">
      <p
        class="opacity-90 text-accent tracking-wide w-full flex text-center items-center justify-center bg-gray-bold p-2 mt-0"
      >
        Built by Francisco Andrade A &copy; {new Date().getFullYear()}
      </p>
    </footer>
  </body>
</html>
