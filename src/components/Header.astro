---
const { nav } = Astro.props;
---

<header class="wrapper">
  <div
    class="md:flex md:justify-between md:items-baseline text-lg pt-8 pb-5 md:pb-0 border-b border-gray-300"
  >
    <h1
      class="md:text-left text-center text-2xl text-gray-bold tracking-tighter italic font-bold font-mono"
    >
      <a href="/">Francisco Andrade</a>
    </h1>
    <nav>
      <ul class="flex md:justify-between gap-2">
        {
          nav.map((item) => {
            return (
              <li class="mr-4 group">
                <a
                  class="text-gray-normal relative block h-full font-mono"
                  href={`/${item.page_link}`}
                >
                  {item.text}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </div>
</header>
