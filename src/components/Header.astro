---
const { nav } = Astro.props;
---

<header class="wrapper">
  <div
    class="md:flex md:justify-between md:items-baseline text-lg pt-8 pb-5 md:pb-6 border-b border-slate-200"
  >
    <h1
      class="md:text-left text-center text-2xl tracking-tighter italic font-bold font-mono"
    >
      <a href="/">Francisco Andrade</a>
    </h1>
    <nav>
      <ul class="flex md:justify-between gap-2">
        {
          nav.map((item) => {
            return (
              <li class="mr-4 group">
                <a
                  class="text-gray-normal relative block h-full font-mono"
                  href={`/${item.page_link}`}
                >
                  {item.text}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  ul li:last-child {
    @apply mr-0;
  }

  ul li a::before {
    content: "";
    position: absolute;
    bottom: -1.58rem;
    margin-left: 0;
    width: 100%;
    right: 10;
    height: 2px;
    opacity: 0;
    will-change: opacity;
    transition: opacity 0.5s ease-in;
  }

  @media (max-width: 800px) {
    ul li a::before {
      bottom: -1.33rem;
    }
  }

  ul li a:hover::before {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    opacity: 1;
    margin-left: 0px;

    background-image: var(--button-gradient);
    background-size: cover;
    background-position: center;
  }
  ul li a.active::before {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    opacity: 1;
    margin-left: 0px;

    background-image: var(--button-gradient);
    background-size: cover;
    background-position: center;
  }
</style>
